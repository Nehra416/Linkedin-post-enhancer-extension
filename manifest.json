{
  "manifest_version": 3,
  "name": "LinkedIn Post Enhancer",
  "version": "1.0.0",
  "description": "Enhance your LinkedIn posts with AI",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content.tsx"]
    }
  ]
}
